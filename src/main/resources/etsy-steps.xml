<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <bean id="driverProvider" class="org.jbehave.web.selenium.FirefoxWebDriverProvider" >
  </bean>
  
  <bean id="pageFactory" class="eu.jasha.portaltests.pages.PageFactory">
     <constructor-arg ref="driverProvider"/>
  </bean>  
  
  <bean id="lifecycleSteps" class="eu.jasha.portaltests.steps.LifecycleSteps">
     <constructor-arg ref="driverProvider"/>
  </bean>  

  <bean id="etsySteps" class="eu.jasha.portaltests.steps.EtsyDotComSteps">
     <constructor-arg ref="pageFactory"/>
  </bean>  

</beans>